{
  "name": "fewd",
  "items": [
    {
      "name": "hello",
      "config": {
        "cli": {
          "command": "hello",
          "description": "say hello to the recipient"
        },
        "recipient": "world"
      }
    },
    {
      "name": "build",
      "handler": "fewd-build",
      "config": {
        "cli": {
          "command": "build <item> [otherItems...]",
          "description": "performs a build of all the source code",
          "options": [
            {
              "flags": "-d, --develop",
              "description": "starts a local server, watches files for changes after build"
            },
            {
              "flags": "-r, --release",
              "description": "performs the build with minification"
            },
            {
              "flags": "-m, --minify",
              "description": "concatenate and minify source files"
            },
            {
              "flags": "-o, --optimize",
              "description": "optimize the images during the build"
            },
            {
              "flags": "-c, --clean",
              "description": "clears build directories before performing the build"
            }
          ]
        }
      },
      "items": [
        {
          "name": "coffee",
          "handler":"",
          "config": {
            "lint": true
          },
          "items": [
            {
              "src": ["./test/src/*.coffee"],
              "dst": "test-compile.js",
              "config": {}
            }
          ]
        }
      ]
    },
    {
      "name": "deploy",
      "handler": "fewd-deploy",
      "config": {
        "cli": {
          "command": "deploy <item> [otherItems...]",
          "description": "deploy your project to an endpoint",
          "options": []
        }
      },
      "items": [
        {
          "name": "production",
          "handler": "s3",
          "config": {
            "region": "us-west-2",
            "bucket": "fewd-bucket-production"
          },
          "items": [
            {
              "dst":"",
              "src":""
            }
          ]
        },
        {
          "name": "staging",
          "handler": "s3",
          "config": {
            "region": "us-west-2",
            "bucket": "fewd-bucket-staging"
          },
          "items": [
            {
              "dst":"",
              "src":""
            }
          ]
        }
      ]
    }
  ]
}
